{
  "name": "react-starter",
  "version": "0.1.0",
  "description": "A basic single page react app",
  "author": "samwato",
  "license": "ISC",
  "scripts": {
    "dev": "esbuild --define:window.IS_PRODUCTION=false ./src/index.jsx --loader:.png=file --loader:.jpg=file --public-path=dist --outdir=www/dist --bundle --watch --servedir=www --serve-fallback=www/index.html",
    "cleanbuild": "rm -r www/dist",
    "prebuild": "npm run type && npm run lint && npm run cleanbuild",
    "build": "esbuild --define:window.IS_PRODUCTION=true ./src/index.jsx --loader:.png=file --loader:.jpg=file --public-path=dist --outdir=www/dist --bundle --minify --sourcemap --sources-content=false --analyze",
    "serve": "esbuild --servedir=www --serve-fallback=www/index.html",
    "prod": "npm run build && npm run serve",
    "lint": "eslint .",
    "format": "prettier . --check",
    "type": "tsc",
    "fix": "prettier . --write && eslint . --fix"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6"
  }
}
