{
  "name": "react-starter",
  "version": "0.1.0",
  "description": "A basic single page react app",
  "author": "samwato",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "init": "./scripts/init-repo.sh",
    "dev": "./scripts/dev.mjs",
    "cleanbuild": "rm -r www || echo 0",
    "prebuild": "npm run check && npm run cleanbuild",
    "build": "./scripts/build.mjs",
    "serve": "http-server www --port 8000 --proxy http://127.0.0.1:8000?",
    "prod": "npm run build && npm run serve",
    "fix": "prettier . --write && eslint . --fix",
    "check": "npm run lint && npm run format && npm run type",
    "lint": "eslint .",
    "format": "prettier . --check",
    "type": "tsc",
    "pretest": "npm run type",
    "test": "jest",
    "update_packages": "./scripts/update_packages.sh"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
